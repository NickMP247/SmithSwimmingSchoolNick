@model IEnumerable<SmithSwimmingSchool_NickMorales.Models.Report>

@{
    ViewData["Title"] = "Progress Reports";
}

<h1 class="text-center mb-4">Progress Reports</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning text-center">
        No reports available for this group.
        <br />
        <a href="@Url.Action("CoursesBySwimmer")" class="btn btn-primary mt-3">Back</a>
    </div>
}
else
{
    <div class="container">
        <div class="row justify-content-center">
            @{
                int reportNumber = 1;
            }
            @foreach (var report in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">Report @reportNumber</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text"><strong>Description: </strong>@report.Description</p>
                        </div>
                    </div>
                </div>
                    reportNumber++; //Para que enumere los reportes que tenga el nadador
            }
            <br />
            <div>
                <a asp-action="CoursesBySwimmer" class="btn btn-secondary">Back to Courses</a>
            </div>
        </div>
    </div>
}
