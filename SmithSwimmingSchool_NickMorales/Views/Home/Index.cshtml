@{
    ViewData["Title"] = "Smith Swimming School";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header class="hero">
        <div class="container">
            <h1 class="display-4">Smith Swimming School</h1>
            <p class="lead">Where water comes to life and dreams come true!</p>
            <a href="#courses" class="btn btn-primary btn-lg">Explore Our Courses</a>
        </div>
    </header>

    <section class="facilities container">
        <h2 class="text-center mb-4">Our Facilities</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/mainpool.jpeg" alt="Main Pool" class="img-fluid facility-img mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Main Pool</h5>
                        <p class="card-text">An Olympic-sized pool with state-of-the-art technology and temperature control for an optimal swimming experience.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/trainigroom.jpeg" alt="Training Room" class="img-fluid facility-img mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Training Room</h5>
                        <p class="card-text">Modern equipment and a motivating environment to strengthen your body and skills.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/kidpool.jpeg" alt="Kids Pool" class="img-fluid facility-img mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Kids Pool</h5>
                        <p class="card-text">A safe and fun area designed specifically for the little ones, with dedicated instructors.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="courses container" id="courses">
        <h2 class="text-center mb-4">Our Courses</h2>
        <div class="row">
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/butterflystile.png" class="card-img-top img-fluid course-img mb-3" alt="Butterfly Stroke">
                    <div class="card-body">
                        <h5 class="card-title">Butterfly Stroke</h5>
                        <p class="card-text">The butterfly stroke is a dynamic and powerful swimming style that requires strength and coordination.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/freestyle.png" class="card-img-top img-fluid course-img mb-3" alt="Freestyle">
                    <div class="card-body">
                        <h5 class="card-title">Freestyle</h5>
                        <p class="card-text">Freestyle is the fastest and most efficient swimming style, perfect for competitive swimmers.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/natación de pecho.png" class="card-img-top img-fluid course-img mb-3" alt="Breaststroke">
                    <div class="card-body">
                        <h5 class="card-title">Breaststroke</h5>
                        <p class="card-text">Breaststroke is a popular swimming style known for its unique frog-like kick and gliding motion.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/natación sincronizada.png" class="card-img-top img-fluid course-img mb-3" alt="Synchronized Swimming">
                    <div class="card-body">
                        <h5 class="card-title">Synchronized Swimming</h5>
                        <p class="card-text">Synchronized swimming combines swimming, dance, and gymnastics, performed in perfect harmony.</p>
                    </div>
                </div>
            </div>
        </div>
        <br />
        @if (User.IsInRole("Administrator") || User.IsInRole("Swimmer") || !User.Identity.IsAuthenticated)
        {
            <div class="d-flex justify-content-center">
                <a href="@Url.Action("Index", "Courses")" class="btn btn-warning btn-lg">See available courses</a>
            </div>
        }
    </section>
    <br />
    <section class="offers container" id="offers">
        <h2 class="text-center mb-4">Special Offers</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/senior.jpeg" alt="Senior Offer" class="img-fluid offer-img mb-3">
                    <div class="card-body">
                        <h5 class="card-title">For Seniors</h5>
                        <p class="card-text">Special programs designed to help seniors stay active and healthy with tailored swimming classes.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/Kid.jpeg" alt="Kids Offer" class="img-fluid offer-img mb-3">
                    <div class="card-body">
                        <h5 class="card-title">For Kids</h5>
                        <p class="card-text">Fun and safe swimming classes specifically designed for kids with experienced instructors.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/adult.jpeg" alt="Adult Offer" class="img-fluid offer-img mb-3">
                    <div class="card-body">
                        <h5 class="card-title">For Adults</h5>
                        <p class="card-text">Variety of swimming classes for adults, from beginners to advanced levels, aimed at fitness and wellness.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>