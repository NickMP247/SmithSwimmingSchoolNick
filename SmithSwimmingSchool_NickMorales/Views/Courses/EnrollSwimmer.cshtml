@model SmithSwimmingSchool_NickMorales.Models.Enrollment

@{
    ViewData["Title"] = "Enroll Swimmer";

    var courseTitle = ViewData["CourseTitle"] as string;
    var swimmerName = ViewData["SwimmerName"] as string;
}

<div class="container">
    <h1 class="text-center mb-4">Enroll Swimmer</h1>

    <p class="text-center mb-4">Use the form below to enroll in the selected course.</p>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="EnrollSwimmer" method="post" class="border p-4 rounded shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group">
                    <label class="form-label"><strong>Course: </strong><span>@courseTitle</span></label>
                    <input type="hidden" asp-for="CourseID" value="@ViewData["CourseID"]" />
                </div>
                <div class="form-group">
                    <label class="form-label"><strong>Swimmer: </strong><span>@swimmerName</span></label>
                    <input type="hidden" asp-for="SwimmerID" value="@ViewData["SwimmerID"]" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Enroll" class="btn btn-primary w-100" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
