@model SmithSwimmingSchool_NickMorales.Models.Coach

@{
    ViewData["Title"] = "Edit Coach";
}

<h1>Edit Coach</h1>

<h4>Coach</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.CoachID" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            @if (User.IsInRole("Coach"))
            {
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" readonly="readonly"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            }
            <br />
            <input type="hidden" asp-for="CoachID" />
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
@if (User.IsInRole("Coach"))
{
    <div>
        <a asp-action="Index" asp-controller="Home">Cancel</a>
    </div>
}
else
{
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}

