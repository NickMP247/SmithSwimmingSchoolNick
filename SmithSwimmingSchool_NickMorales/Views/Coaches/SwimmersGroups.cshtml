@model IEnumerable<SmithSwimmingSchool_NickMorales.Models.Enrollment>

@{
    ViewData["Title"] = "Swimmers in the Group";
}

<h1 class="text-center mb-4">Swimmers in the Group</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning text-center">
        No swimmers assigned to this group.
        <br />
        <a href="@Url.Action("GroupCourse", new { id = ViewBag.CourseID })" class="btn btn-primary mt-3">Back to Groups</a>
    </div>
}
else
{
    <div class="container">
        <div class="row justify-content-center">
            @foreach (var enrollment in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">@enrollment.Swimmer.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text"><strong>Phone: </strong>@enrollment.Swimmer.PhoneNumber</p>
                            <p class="card-text"><strong>Email: </strong>@enrollment.Swimmer.Email</p>
                            <p class="card-text"><strong>Genre: </strong>@enrollment.Swimmer.Genre</p>
                            <p class="card-text"><strong>Birth Date: </strong>@enrollment.Swimmer.BirthDate?.ToShortDateString()</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a asp-action="CreateReport" asp-route-idEnrollment="@enrollment.EnrollmentID" class="btn btn-sm btn-outline-danger">Add report</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
