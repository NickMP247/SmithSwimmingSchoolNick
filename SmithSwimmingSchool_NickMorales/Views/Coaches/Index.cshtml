@model IEnumerable<SmithSwimmingSchool_NickMorales.Models.Coach>

@{
    ViewData["Title"] = "Coaches";
}

<h1>Coaches</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CoachID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CoachID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CoachID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
